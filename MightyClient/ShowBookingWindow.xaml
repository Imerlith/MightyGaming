<Window x:Class="MightyClient.ShowBookingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MightyClient"
        mc:Ignorable="d"
        Title="ShowBookingWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"></ColumnDefinition>
            <ColumnDefinition Width="3*"></ColumnDefinition>
            <ColumnDefinition Width="2*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <DataGrid Grid.Row="0" Grid.RowSpan="5"/>
        <Grid Grid.Column="1" Grid.Row="1" Grid.RowSpan="3" Grid.ColumnSpan="3" Background="LightGray">
            <Grid.ColumnDefinitions>
                <ColumnDefinition ></ColumnDefinition>
                <ColumnDefinition ></ColumnDefinition>
                <ColumnDefinition ></ColumnDefinition>
                <ColumnDefinition ></ColumnDefinition>
                <ColumnDefinition ></ColumnDefinition>
                <ColumnDefinition ></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>

            <Label Content="Imie" HorizontalAlignment="Left" VerticalAlignment="center"  Grid.Row="0" Grid.Column="0"/>
            <TextBox HorizontalAlignment="Left" VerticalAlignment="Center" TextWrapping="Wrap"  Width="150" Grid.Row="0" Grid.Column="1"  Grid.ColumnSpan="2"/>

            <Label Content="Nazwisko" HorizontalAlignment="Left" VerticalAlignment="center"  Grid.Row="1" Grid.Column="0"/>
            <TextBox HorizontalAlignment="Left" VerticalAlignment="Center" TextWrapping="Wrap"  Width="150" Grid.Row="1" Grid.Column="1"  Grid.ColumnSpan="2"/>

            <Label Content="Numer telefonu" HorizontalAlignment="Left" VerticalAlignment="center"  Grid.Row="2" Grid.Column="0"/>
            <TextBox HorizontalAlignment="Left" VerticalAlignment="Center" TextWrapping="Wrap"  Width="150" Grid.Row="2" Grid.Column="1"  Grid.ColumnSpan="2"/>

            <Label Content="Email" HorizontalAlignment="Left" VerticalAlignment="center"  Grid.Row="3" Grid.Column="0"/>
            <TextBox HorizontalAlignment="Left" VerticalAlignment="Center"  TextWrapping="Wrap"  Width="150" Grid.Row="3" Grid.Column="1"  Grid.ColumnSpan="2"/>

            <Label Content="Data" HorizontalAlignment="Left" VerticalAlignment="center"  Grid.Row="0" Grid.Column="3"/>
            <DatePicker HorizontalAlignment="Left" VerticalAlignment="center" Width="150" Grid.Row="0" Grid.Column="4" Grid.ColumnSpan="2"/>

            <Label Content="Godzina" HorizontalAlignment="Left" VerticalAlignment="Center"  Grid.Row="1" Grid.Column="3"/>
            <DatePicker  HorizontalAlignment="Left" VerticalAlignment="center" Width="150" Grid.Row="1" Grid.Column="4" Grid.ColumnSpan="2"/>

            <Label Content="Liczba osób" HorizontalAlignment="Left" VerticalAlignment="center"   Grid.Row="2" Grid.Column="3"/>
            <TextBox HorizontalAlignment="Left" VerticalAlignment="Center"  Text="Liczba osób" TextWrapping="Wrap"  Width="150" Grid.Row="2" Grid.Column="4"  Grid.ColumnSpan="2"/>

            <Label Content="Stanowisko" HorizontalAlignment="Left" VerticalAlignment="center"  Grid.Row="3" Grid.Column="3"/>
            <ComboBox  HorizontalAlignment="Left" VerticalAlignment="Center" Width="150" Grid.Row="3" Grid.Column="4" Grid.ColumnSpan="2"/>

            <Label Content="Usługi" HorizontalAlignment="Right" VerticalAlignment="center"  Grid.Row="5"/>
            <CheckBox Content="Jedzenie"  HorizontalAlignment="center" VerticalAlignment="center"  Grid.Row="5" Grid.Column="1"/>
            <CheckBox Content="Muzyka"  HorizontalAlignment="center" VerticalAlignment="center"  Grid.Row="5" Grid.Column="2"/>
            <CheckBox Content="Cosplay"  HorizontalAlignment="center" VerticalAlignment="center"  Grid.Row="5" Grid.Column="3"/>
            <CheckBox Content="Alkohol"  HorizontalAlignment="center" VerticalAlignment="center"  Grid.Row="5" Grid.Column="4"/>

            <Label Content="Sprzęt" HorizontalAlignment="Right" VerticalAlignment="Center"  Grid.Row="6"/>
            <Label Content="PC" HorizontalAlignment="center" VerticalAlignment="Center"  Grid.Row="6" Grid.Column="1"/>
            <TextBox HorizontalAlignment="Center" VerticalAlignment="Center"  TextWrapping="Wrap"  Width="80" Grid.Row="7" Grid.Column="1"  />
            <Label Content="XBOX ONE" HorizontalAlignment="center" VerticalAlignment="Center"  Grid.Row="6" Grid.Column="2"/>
            <TextBox HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap"  Width="80" Grid.Row="7" Grid.Column="2"  />
            <Label Content="PS4" HorizontalAlignment="center" VerticalAlignment="Center"  Grid.Row="6" Grid.Column="3"/>
            <TextBox HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap"  Width="80" Grid.Row="7" Grid.Column="3"  />
            <Label Content="Planszówki" HorizontalAlignment="center" VerticalAlignment="Center"  Grid.Row="6" Grid.Column="4"/>
            <TextBox HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap"  Width="80" Grid.Row="7" Grid.Column="4"  />

        </Grid>
        <Grid Grid.Column="3" Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Button Content="Anuluj rezerwację" HorizontalAlignment="Center"  VerticalAlignment="Center" Grid.Column="0"/>
            <Button Content="Potwierdź rezerwację" HorizontalAlignment="Center"  VerticalAlignment="Center" Grid.Column="1"/>

        </Grid>
        
    </Grid>
</Window>
